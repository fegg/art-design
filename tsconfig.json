{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "es2016",
    "lib": ["DOM", "ES2020"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": ["src/typings"],
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
